<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".WaitFromNotificationActivity">




    <TextView
            android:layout_width="270dp"
            android:layout_height="270dp"
            android:textSize="20dp"
            android:textAlignment="gravity"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/circle_background"
            android:id="@+id/circleBigger" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="225dp"
            android:backgroundTint="@color/lightGreen"/>
    <TextView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:textSize="20dp"
            android:textAlignment="gravity"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/circle_background"
            android:id="@+id/circleSmaller" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="260dp"
            android:backgroundTint="@color/darkerGreen"/>

    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="New Quizz"
            android:textColor="@color/primaryHighlight"
            android:textSize="35dp"
            android:textStyle="bold"
            android:ems="10"
            android:id="@+id/editTextQuizTitle" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="40dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"/>
    <TextView
            android:text="Waiting for admin to start quiz"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" android:layout_marginTop="20dp"
            android:textColor="@color/primaryHighlight"
            android:textStyle="bold"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextQuizTitle" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="40dp"/>
    <TextView
            android:text="Theme:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primaryHighlight"
            android:textStyle="bold"
            android:textSize="20dp"
            android:id="@+id/themeTextView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="40dp" android:layout_marginTop="64dp"
            app:layout_constraintTop_toBottomOf="@+id/circleBigger"/>

</android.support.constraint.ConstraintLayout>